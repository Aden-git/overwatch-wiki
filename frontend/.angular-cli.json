{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "project": {
        "name": "overwatch-wiki"
    },
    "apps": [
        {
            "name": "overwatch-wiki-app",
            "root": "src",
            "outDir": "dist/overwatch-wiki-app",
            "assets": [
                "assets",
                "favicon.ico"
            ],
            "index": "index.html",
            "main": "main.ts",
            "test": "test.ts",
            "polyfills": "polyfills.ts",
            "tsconfig": "../tsconfig.app.json",
            "testTsconfig": "../tsconfig.unit.json",
            "prefix": "app",
            "styles": [
                "styles/main.less"
            ],
            "scripts": [],
            "environmentSource": "environments/environment.ts",
            "environments": {
                "dev": "environments/environment.ts",
                "prod": "environments/environment.prod.ts"
            }
        }

    ],
    "test": {
        "karma": {
            "config": "./karma.conf.js"
        }
    },
    "defaults": {
        "styleExt": "less",
        "component": {}
    },
    "packageManager": "npm"
}
